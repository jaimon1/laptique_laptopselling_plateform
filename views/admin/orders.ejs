                                <script
                                    src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
                                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

                                <script>
                                    let currentOrderId = null;
                                    let currentFilters = {
                                        search: '<%= search || "" %>',
                                        status: '<%= status || "" %>',
                                        sortBy: '<%= sortBy || "createdOn" %>',
                                        sortOrder: '<%= sortOrder || "desc" %>',
                                        page: <%= currentPage || 1 %>
        };

                                   
                                    async function loadOrders(page = 1, updateUrl = true) {
                                        const params = new URLSearchParams({
                                            page: page,
                                            search: currentFilters.search,
                                            status: currentFilters.status,
                                            sortBy: currentFilters.sortBy,
                                            sortOrder: currentFilters.sortOrder
                                        });

                                      
                                        showLoading();

                                        try {
                                            const response = await fetch(`/admin/orders?${params.toString()}`, {
                                                headers: { 'X-Requested-With': 'XMLHttpRequest' }
                                            });

                                            if (response.ok) {
                                                const html = await response.text();
                                                const parser = new DOMParser();
                                                const doc = parser.parseFromString(html, 'text/html');

                                             
                                                const newStats = doc.querySelector('.row.mb-4');
                                                const currentStats = document.querySelector('.row.mb-4');
                                                if (newStats && currentStats) {
                                                    currentStats.innerHTML = newStats.innerHTML;
                                                }

                                            
                                                const newTable = doc.querySelector('.table-container');
                                                const currentTable = document.querySelector('.table-container');
                                                if (newTable && currentTable) {
                                                    currentTable.innerHTML = newTable.innerHTML;
                                                }

                                           
                                                const newMobileCards = doc.querySelector('.mobile-orders-container');
                                                const currentMobileCards = document.querySelector('.mobile-orders-container');
                                                if (newMobileCards && currentMobileCards) {
                                                    currentMobileCards.innerHTML = newMobileCards.innerHTML;
                                                }

                                          
                                                const newPagination = doc.querySelector('nav[aria-label="Orders pagination"]');
                                                const currentPagination = document.querySelector('nav[aria-label="Orders pagination"]');
                                                if (newPagination && currentPagination) {
                                                    currentPagination.parentElement.innerHTML = newPagination.parentElement.innerHTML;
                                                }

                                            
                                                if (updateUrl) {
                                                    const newUrl = `/admin/orders?${params.toString()}`;
                                                    window.history.pushState({ page, filters: currentFilters }, '', newUrl);
                                                }

                                                currentFilters.page = page;
                                                hideLoading();
                                                window.scrollTo({ top: 0, behavior: 'smooth' });
                                            } else {
                                                throw new Error('Failed to load orders');
                                            }
                                        } catch (error) {
                                            console.error('Error loading orders:', error);
                                            hideLoading();
                                            Swal.fire({
                                                icon: 'error',
                                                title: 'Error!',
                                                text: 'Failed to load orders. Please try again.',
                                                confirmButtonColor: '#ef4444'
                                            });
                                        }
                                    }

                                  
                                    function applyFilters(event) {
                                        if (event) event.preventDefault();

                                        currentFilters.search = document.getElementById('search').value.trim();
                                        currentFilters.status = document.getElementById('status').value;
                                        currentFilters.sortBy = document.getElementById('sortBy').value;
                                        currentFilters.sortOrder = document.getElementById('sortOrder').value;

                                        loadOrders(1);
                                    }

                               
                                    function goToPage(page, event) {
                                        if (event) event.preventDefault();
                                        loadOrders(page);
                                    }

                                  
                                    function updateStatus(orderId) {
                                        currentOrderId = orderId;
                                        const modal = new bootstrap.Modal(document.getElementById('statusModal'));
                                        modal.show();
                                    }

                                    async function submitStatusUpdate() {
                                        const status = document.getElementById('newStatus').value;
                                        const note = document.getElementById('statusNote').value;

                                        if (!status) {
                                            Swal.fire({
                                                icon: 'warning',
                                                title: 'Missing Status',
                                                text: 'Please select a status',
                                                confirmButtonColor: '#f59e0b'
                                            });
                                            return;
                                        }

                              
                                        Swal.fire({
                                            title: 'Updating...',
                                            text: 'Please wait while we update the order status',
                                            allowOutsideClick: false,
                                            didOpen: () => {
                                                Swal.showLoading();
                                            }
