    <script>
     
        function updatePrice(selectElement, index) {
            const selectedOption = selectElement.options[selectElement.selectedIndex];
            const regularPrice = selectedOption.getAttribute('data-regular');
            const salePrice = selectedOption.getAttribute('data-sale');
            const quantity = selectedOption.getAttribute('data-quantity');

            const displayPrice = salePrice && salePrice != '0' ? salePrice : regularPrice;
            document.getElementById(`displayPrice${index}`).innerHTML = `<div class="price-display">₹${displayPrice}</div>`;

            const quantityElement = document.getElementById(`displayQuantity${index}`);
            const stockClass = quantity > 10 ? 'stock-high' : quantity > 0 ? 'stock-low' : 'stock-out';
            quantityElement.innerHTML = `<span class="stock-badge ${stockClass}">${quantity}</span>`;
        }


        async function loadProductPage(pageNumber) {
            const searchValue = document.getElementById('searchInput').value.trim();
            const searchParam = searchValue ? `&search=${encodeURIComponent(searchValue)}` : '';

            const tableBody = document.getElementById('productTableBody');
            const originalContent = tableBody.innerHTML;
            tableBody.innerHTML = `
            <tr>
                <td colspan="9" class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 text-muted">Loading products...</p>
                </td>
            </tr>
        `;

            try {
                const response = await fetch(`/admin/loadProduct?page=${pageNumber}${searchParam}`, {
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                });

                if (response.ok) {
                    const html = await response.text();
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');

                    const newTableBody = doc.querySelector('#productTableBody');
                    if (newTableBody) tableBody.innerHTML = newTableBody.innerHTML;

                    const newStats = doc.querySelector('#productStats');
                    if (newStats) document.querySelector('#productStats').innerHTML = newStats.innerHTML;

                    const newPagination = doc.querySelector('#productPagination');
                    if (newPagination) document.querySelector('#productPagination').innerHTML = newPagination.innerHTML;

                  
                    const newSearchInput = doc.querySelector('#searchInput');
                    if (newSearchInput) {
                        document.getElementById('searchInput').value = newSearchInput.value;
                    }

                    const newUrl = `/admin/loadProduct?page=${pageNumber}${searchParam}`;
                    window.history.pushState({ page: pageNumber, search: searchValue }, '', newUrl);

                    window.scrollTo({ top: 0, behavior: 'smooth' });
                } else {
                    throw new Error('Failed to load page');
                }
            } catch (error) {
                console.error('Error:', error);
                tableBody.innerHTML = originalContent;
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Failed to load page. Please try again.',
                    confirmButtonColor: '#ef4444'
                });
            }
        }

       
        function performSearch() {
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                console.log('Searching for:', searchInput.value);
                loadProductPage(1);
            }
        }

        
        function clearSearch() {
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.value = '';
                loadProductPage(1);
            }
        }

        
        document.addEventListener('DOMContentLoaded', function () {
            console.log('Product page loaded');

            
            const searchForm = document.getElementById('searchForm');
            if (searchForm) {
                searchForm.addEventListener('submit', function (e) {
                    e.preventDefault();
                    performSearch();
                });
            }

          
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('keypress', function (e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        performSearch();
                    }
                });
            }
        });

      
        async function toggleProductStatus(productId, shouldBlock, buttonElement) {
            const action = shouldBlock ? 'block' : 'unblock';

            const result = await Swal.fire({
                title: `${action.charAt(0).toUpperCase() + action.slice(1)} Product?`,
                text: `Are you sure you want to ${action} this product?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: shouldBlock ? '#ef4444' : '#10b981',
                cancelButtonColor: '#6b7280',
                confirmButtonText: `Yes, ${action}!`,
                cancelButtonText: 'Cancel'
            });

            if (!result.isConfirmed) return;

            buttonElement.disabled = true;
            const originalHTML = buttonElement.innerHTML;
            buttonElement.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

            try {
                const url = shouldBlock
                    ? `/admin/blockProduct?id=${productId}&page=<%= currentPage %>`
                    : `/admin/unblockProduct?id=${productId}&page=<%= currentPage %>`;

                const response = await fetch(url, {
                    method: 'PATCH',
                    headers: { 
                        'X-Requested-With': 'XMLHttpRequest',
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    const row = buttonElement.closest('tr');
                    const statusCell = row.querySelector('td:nth-child(8)');

                    if (shouldBlock) {
                        buttonElement.className = 'btn-action btn-unblock-product';
                        buttonElement.innerHTML = '<i class="fas fa-check-circle"></i>';
                        buttonElement.onclick = function () { toggleProductStatus(productId, false, this); };
                        buttonElement.title = 'Unblock';
                        if (statusCell) {
                            statusCell.innerHTML = '<span class="status-badge status-blocked"><i class="fas fa-ban me-1"></i>Blocked</span>';
                        }
                    } else {
                        buttonElement.className = 'btn-action btn-block-product';
                        buttonElement.innerHTML = '<i class="fas fa-ban"></i>';
                        buttonElement.onclick = function () { toggleProductStatus(productId, true, this); };
                        buttonElement.title = 'Block';
                        if (statusCell) {
                            statusCell.innerHTML = '<span class="status-badge status-active"><i class="fas fa-check-circle me-1"></i>Active</span>';
                        }
                    }
                    buttonElement.disabled = false;

             
                    const activeCount = document.getElementById('activeProductsCount');
                    const blockedCount = document.getElementById('blockedProductsCount');
                    if (activeCount && blockedCount) {
                        let active = parseInt(activeCount.textContent);
                        let blocked = parseInt(blockedCount.textContent);
                        if (shouldBlock) {
                            active--;
                            blocked++;
                        } else {
                            active++;
                            blocked--;
                        }
                        activeCount.textContent = active;
                        blockedCount.textContent = blocked;
                    }

                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: `Product ${shouldBlock ? 'blocked' : 'unblocked'} successfully`,
                        timer: 2000,
                        showConfirmButton: false
                    });
                } else {
                    throw new Error('Failed to update product status');
                }
            } catch (error) {
                console.error('Error:', error);
                buttonElement.innerHTML = originalHTML;
                buttonElement.disabled = false;
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Failed to update product status. Please try again.',
                    confirmButtonColor: '#ef4444'
                });
            }
        }

        async function deleteProduct(productId, currentPage) {
            const result = await Swal.fire({
                title: 'Delete Product?',
                text: 'This action cannot be undone!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            });

            if (result.isConfirmed) {
                try {
                    Swal.fire({
                        title: 'Deleting...',
                        allowOutsideClick: false,
                        didOpen: () => Swal.showLoading()
                    });

                    const response = await fetch(`/admin/deleteProduct?id=${productId}&page=${currentPage}`, {
                        method: 'DELETE',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest',
                            'Content-Type': 'application/json'
                        }
                    });

                    if (response.ok) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Deleted!',
                            text: 'Product has been deleted.',
                            timer: 2000,
                            showConfirmButton: false
                        });
                        setTimeout(() => window.location.reload(), 2000);
                    } else {
                        throw new Error('Failed to delete');
                    }
                } catch (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'Failed to delete product.',
                        confirmButtonColor: '#ef4444'
                    });
                }
            }
        }

   
        window.addEventListener('popstate', function (event) {
            if (event.state && event.state.page) {
                loadProductPage(event.state.page);
            } else {
                location.reload();
            }
        });
    </script>

