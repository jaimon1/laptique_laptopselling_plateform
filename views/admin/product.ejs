<%-include("../../views/parsuals/admin/header")%>

    <div class="col-md-10 p-0">
        <div class="topbar">
            <div class="d-flex justify-content-between align-items-center w-100">
                <h4>Product Management</h4>
                <div class="d-flex gap-3 align-items-center">
                    <form id="searchForm" action="/admin/loadProduct" method="GET" class="d-flex"
                        onsubmit="return false;">
                        <input type="text" id="searchInput" name="search" class="form-control me-2"
                            placeholder="Search by name, category, brand..." style="width: 350px;"
                            value="<%= search || '' %>">
                        <button type="button" class="btn btn-primary" onclick="performSearch()">
                            <i class="fas fa-search"></i>
                        </button>
                        <% if(search) { %>
                            <button type="button" class="btn btn-secondary ms-2" onclick="clearSearch()"
                                title="Clear search">
                                <i class="fas fa-times"></i>
                            </button>
                            <% } %>
                    </form>
                    <a href="/admin/addProduct" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add Product
                    </a>
                </div>
            </div>
        </div>

        <div class="container-fluid py-4">
            
            <div class="row mb-4" id="productStats">
                <div class="col-md-3">
                    <div class="stats-card-mini">
                        <div class="stats-icon-mini bg-gradient-primary">
                            <i class="fas fa-box"></i>
                        </div>
                        <div class="stats-content">
                            <h3 id="totalProductsCount">
                                <%= productData.length %>
                            </h3>
                            <p>Total Products</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card-mini">
                        <div class="stats-icon-mini bg-gradient-success">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="stats-content">
                            <h3 id="activeProductsCount">
                                <%= productData.filter(p=> !p.isBlocked).length %>
                            </h3>
                            <p>Active Products</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card-mini">
                        <div class="stats-icon-mini bg-gradient-danger">
                            <i class="fas fa-ban"></i>
                        </div>
                        <div class="stats-content">
                            <h3 id="blockedProductsCount">
                                <%= productData.filter(p=> p.isBlocked).length %>
                            </h3>
                            <p>Blocked Products</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card-mini">
                        <div class="stats-icon-mini bg-gradient-warning">
                            <i class="fas fa-layer-group"></i>
                        </div>
                        <div class="stats-content">
                            <h3>
                                <%= productData.reduce((sum, p)=> sum + (p.variants[0]?.quantity || 0), 0) %>
                            </h3>
                            <p>Total Stock</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modern-card" id="productTableCard"></div>
            <div class="card-header-modern">
                <h5><i class="fas fa-box me-2"></i>Product List</h5>
                <span class="badge bg-primary">Total: <%= productData.length %> products</span>
            </div>
            <div class="table-container">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th>
                                <div class="th-content"><i class="fas fa-image me-2"></i>Image</div>
                            </th>
                            <th>
                                <div class="th-content"><i class="fas fa-tag me-2"></i>Product</div>
                            </th>
                            <th>
                                <div class="th-content"><i class="fas fa-folder me-2"></i>Category</div>
                            </th>
                            <th>
                                <div class="th-content"><i class="fas fa-copyright me-2"></i>Brand</div>
                            </th>
                            <th>
                                <div class="th-content"><i class="fas fa-rupee-sign me-2"></i>Price</div>
                            </th>
                            <th>
                                <div class="th-content"><i class="fas fa-cubes me-2"></i>Stock</div>
                            </th>
                            <th>
                                <div class="th-content"><i class="fas fa-layer-group me-2"></i>Variants</div>
                            </th>
                            <th>
                                <div class="th-content"><i class="fas fa-shield-alt me-2"></i>Status</div>
                            </th>
                            <th>
                                <div class="th-content"><i class="fas fa-cog me-2"></i>Actions</div>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="productTableBody">
                        <% for(let i=0; i < productData.length; i++) { const product=productData[i] %>
                            <tr class="product-row">
                                <td>
                                    <img src="/uploads/re-images/<%= productData[i].ProductImages[0] %>" alt="Product"
                                        class="product-image">
                                </td>
                                <td>
                                    <div class="product-name">
                                        <%= product.productName %>
                                    </div>
                                </td>
                                <td>
                                    <span class="category-badge">
                                        <%= product.category ? product.category.name : 'No category' %>
                                    </span>
                                </td>
                                <td>
                                    <span class="brand-badge">
                                        <%= product.brand ? product.brand.name : 'No brand' %>
                                    </span>
                                </td>
                                <td id="displayPrice<%= i %>">
                                    <div class="price-display">
                                        <% if(product?.variants && product.variants[0]) { %>
                                            ₹<%= product.variants[0].salePrice || product.variants[0].regularPrice %>
                                                <% } else { %>
                                                    N/A
                                                    <% } %>
                                    </div>
                                </td>
                                <td id="displayQuantity<%= i %>">
                                    <span
                                        class="stock-badge <%= product.variants[0]?.quantity > 10 ? 'stock-high' : product.variants[0]?.quantity > 0 ? 'stock-low' : 'stock-out' %>">
                                        <%= product.variants[0]?.quantity || 0 %>
                                    </span>
                                </td>
                                <td>
                                    <button class="btn-variant" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#variant<%= i %>">
                                        <i class="fas fa-eye me-1"></i>View (<%= product.variants.length %>)
                                    </button>
                                    <div class="collapse mt-2" id="variant<%= i %>">
                                        <div class="variant-selector">
                                            <select class="form-select form-select-sm"
                                                onchange="updatePrice(this, <%= i %>)">
                                                <option selected disabled>Select Variant</option>
                                                <% product.variants.forEach(function(variant){ %>
                                                    <option value="<%= variant.regularPrice %>"
                                                        data-sale="<%= variant.salePrice %>"
                                                        data-regular="<%= variant.regularPrice %>"
                                                        data-quantity="<%= variant.quantity %>">
                                                        <%= variant.storage %> - ₹<%= variant.salePrice ||
                                                                variant.regularPrice %> (Stock: <%= variant.quantity %>)
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <% if(product.isBlocked===false) { %>
                                        <span class="status-badge status-active">
                                            <i class="fas fa-check-circle me-1"></i>Active
                                        </span>
                                        <% } else { %>
                                            <span class="status-badge status-blocked">
                                                <i class="fas fa-ban me-1"></i>Blocked
                                            </span>
                                            <% } %>
                                </td>
                                <td>
                                    <div class="action-buttons-product">
                                        <a href="/admin/editProduct/<%= product._id %>" class="btn-action btn-edit"
                                            title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn-action btn-delete"
                                            onclick="deleteProduct('<%= product._id %>', '<%= currentPage %>')"
                                            title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                        <% if(product.isBlocked===false) { %>
                                            <button class="btn-action btn-block-product"
                                                onclick="toggleProductStatus('<%= product._id %>', true, this)"
                                                title="Block">
                                                <i class="fas fa-ban"></i>
                                            </button>
                                            <% } else { %>
                                                <button class="btn-action btn-unblock-product"
                                                    onclick="toggleProductStatus('<%= product._id %>', false, this)"
                                                    title="Unblock">
                                                    <i class="fas fa-check-circle"></i>
                                                </button>
                                                <% } %>
                                    </div>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
            <nav aria-label="Page navigation" id="productPagination">
                <ul class="pagination justify-content-center mt-4">
                    <% if(currentPage> 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="#"
                                onclick="loadProductPage(<%= currentPage - 1 %>); return false;">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                        <% } else { %>
                            <li class="page-item disabled">
                                <span class="page-link"><i class="fas fa-chevron-left"></i></span>
                            </li>
                            <% } %>

                                <% if(totalPages> 0) { %>
                                    <li class="page-item <%= currentPage === 1 ? 'active' : '' %>">
                                        <a class="page-link" href="#" onclick="loadProductPage(1); return false;">1</a>
                                    </li>
                                    <% } %>

                                        <% if(currentPage> 3) { %>
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                            <% } %>

                                                <% let startPage=Math.max(2, currentPage - 1); let
                                                    endPage=Math.min(totalPages - 1, currentPage + 1); for(let
                                                    i=startPage; i <=endPage; i++) { %>
                                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                        <a class="page-link" href="#"
                                                            onclick="loadProductPage(<%= i %>); return false;">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>

                                                        <% if(currentPage < totalPages - 2) { %>
                                                            <li class="page-item disabled"><span
                                                                    class="page-link">...</span></li>
                                                            <% } %>

                                                                <% if(totalPages> 1) { %>
                                                                    <li
                                                                        class="page-item <%= currentPage === totalPages ? 'active' : '' %>">
                                                                        <a class="page-link" href="#"
                                                                            onclick="loadProductPage(<%= totalPages %>); return false;">
                                                                            <%= totalPages %>
                                                                        </a>
                                                                    </li>
                                                                    <% } %>

                                                                        <% if(currentPage < totalPages) { %>
                                                                            <li class="page-item">
                                                                                <a class="page-link" href="#"
                                                                                    onclick="loadProductPage(<%= currentPage + 1 %>); return false;">
                                                                                    <i class="fas fa-chevron-right"></i>
                                                                                </a>
                                                                            </li>
                                                                            <% } else { %>
                                                                                <li class="page-item disabled">
                                                                                    <span class="page-link"><i
                                                                                            class="fas fa-chevron-right"></i></span>
                                                                                </li>
                                                                                <% } %>
                </ul>
                <div class="text-center mt-3">
                    <small class="text-muted">
                        Page <%= currentPage %> of <%= totalPages %> (Showing <%= productData.length %> products)
                    </small>
                </div>
            </nav>
        </div>
    </div>
