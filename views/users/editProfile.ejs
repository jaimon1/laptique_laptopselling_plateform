    <%-include("../../views/parsuals/user/header")%>
   
        <div class="page-header fade-in">
            <div class="container">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="text-white">Home</a></li>
                        <li class="breadcrumb-item"><a href="#" class="text-white">Profile</a></li>
                        <li class="breadcrumb-item active text-white-50">Edit Profile</li>
                    </ol>
                </nav>
                <h1 class="mb-0">Edit Profile</h1>
                <p class="mb-0 opacity-75">Update your personal information</p>
            </div>
        </div>

        <div class="container">
            
            <div id="alertContainer"></div>

            <div class="row">
                
                <div class="col-lg-4">
                    <div class="profile-card text-center slide-in">
                        <h5><i class="fas fa-camera me-2"></i>Profile Picture</h5>
                        <div class="profile-image-container mb-3">
                            <img src="<%= user.profileImage ? user.profileImage : 'data:image/jpeg;base64,' %>"
                                alt="Profile" class="profile-img" id="profileImage">
                            <button class="image-upload-btn" onclick="document.getElementById('imageUpload').click()">
                                <i class="fas fa-camera"></i>
                            </button>
                            <input type="file" id="imageUpload" name="image" accept="image/*" style="display: none;"
                                onchange="handleImageUpload(event)">
                        </div>
                        <p class="text-muted">Click the camera icon to update your profile picture</p>
                        <small class="text-muted">Recommended: Square image, at least 150x150px</small>
                    </div>
                </div>

                
                <div class="col-lg-8">
                    <form id="editProfileForm" method="post" action="/editProfile">
                 
                        <div class="profile-card fade-in">
                            <h5><i class="fas fa-user me-2"></i>Personal Information</h5>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-label">Full Name <span class="required">*</span></label>
                                        <input type="text" class="form-control" name="firstName" id="firstName"
                                            value="<%= user.name %>"  minlength="3" maxlength="50" 
                                            pattern="^[a-zA-Z\s]+$">
                                        <div class="invalid-feedback">Name must be 3-50 characters and contain only letters</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Email Address <span class="required">*</span></label>
                                        <div class="input-group">
                                            <input type="email" class="form-control" id="email" name="email"
                                                value="<%= user.email %>">
                                            <button type="button" class="btn btn-outline-primary"
                                                onclick="showEmailVerificationModal()">
                                                <i class="fas fa-shield-alt me-1"></i>Verify
                                            </button>
                                        </div>
                                        <small class="text-muted">Click verify to change your email address</small>
                                        <div class="invalid-feedback">Please enter a valid email address</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Phone Number <span class="required">*</span></label>
                                        <input type="tel" class="form-control" id="phone" name="phone"
                                            value="<%= user.phone %>"  pattern="^[6-9]\d{9}$" maxlength="10">
                                        <small class="text-muted">Enter 10-digit Indian mobile number</small>
                                        <div class="invalid-feedback">Please enter a valid 10-digit Indian mobile number</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Date of Birth</label>
                                        <input type="date" class="form-control" name="dateOfBirth" id="dateOfBirth"
                                            value="<%= dateOfBirth ? dateOfBirth.toISOString().split('T')[0] : '' %>">
                                        <div class="invalid-feedback">Please select a valid date</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Gender <span class="required">*</span></label>
                                        <select class="form-control" id="gender" name="gender" >
                                            <option value="">Select Gender</option>
                                            <option value="male" <%=user.gender==='male' ? 'selected' : '' %>>Male</option>
                                            <option value="female" <%=user.gender==='female' ? 'selected' : '' %>>Female</option>
                                            <option value="other" <%=user.gender==='other' ? 'selected' : '' %>>Other</option>
                                            <option value="prefer-not-to-say" <%=user.gender==='prefer-not-to-say' ? 'selected' : '' %>>Prefer not to say</option>
                                        </select>
                                        <div class="invalid-feedback">Please select your gender</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                      
                        <div class="profile-card fade-in">
                            <div class="d-flex flex-column flex-md-row gap-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Save Changes
                                </button>
                                <button type="button" class="btn btn-outline-secondary" onclick="resetForm()">
                                    <i class="fas fa-undo me-2"></i>Reset Form
                                </button>
                                <button type="button" class="btn btn-outline-primary" onclick="goBackToProfile()">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Profile
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script>
      
            document.getElementById('editProfileForm').addEventListener('submit', function (e) {
                if (!validateForm()) {
                    e.preventDefault();
                } else {
                    saveProfile();
                }
            });

            function validateForm() {
                const form = document.getElementById('editProfileForm');
                let isValid = true;
                let errors = [];

     
                const name = document.getElementById('firstName');
                const nameValue = name.value.trim();
                if (!nameValue) {
                    errors.push('Name is required');
                    name.classList.add('is-invalid');
                    isValid = false;
                } else if (nameValue.length < 3 || nameValue.length > 50) {
                    errors.push('Name must be between 3 and 50 characters');
                    name.classList.add('is-invalid');
                    isValid = false;
                } else if (!/^[a-zA-Z\s]+$/.test(nameValue)) {
                    errors.push('Name must contain only letters and spaces');
                    name.classList.add('is-invalid');
                    isValid = false;
                } else {
                    name.classList.remove('is-invalid');
                    name.classList.add('is-valid');
                }


                const email = document.getElementById('email');
                const emailValue = email.value.trim();
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailValue) {
                    errors.push('Email is required');
                    email.classList.add('is-invalid');
                    isValid = false;
                } else if (!emailRegex.test(emailValue)) {
                    errors.push('Please enter a valid email address');
                    email.classList.add('is-invalid');
                    isValid = false;
                } else {
                    email.classList.remove('is-invalid');
                    email.classList.add('is-valid');
                }

               
                const phone = document.getElementById('phone');
                const phoneValue = phone.value.trim();
                const phoneRegex = /^[6-9]\d{9}$/;
                if (!phoneValue) {
                    errors.push('Phone number is required');
                    phone.classList.add('is-invalid');
                    isValid = false;
                } else if (!phoneRegex.test(phoneValue)) {
                    errors.push('Please enter a valid 10-digit Indian mobile number starting with 6-9');
                    phone.classList.add('is-invalid');
                    isValid = false;
                } else {
                    phone.classList.remove('is-invalid');
                    phone.classList.add('is-valid');
                }

              
                const gender = document.getElementById('gender');
                if (!gender.value) {
                    errors.push('Please select your gender');
                    gender.classList.add('is-invalid');
                    isValid = false;
                } else {
                    gender.classList.remove('is-invalid');
                    gender.classList.add('is-valid');
                }

           
                const dob = document.getElementById('dateOfBirth');
                if (dob.value) {
                    const dobDate = new Date(dob.value);
                    const today = new Date();
                    const age = today.getFullYear() - dobDate.getFullYear();
                    
                    if (age < 13) {
                        errors.push('You must be at least 13 years old');
                        dob.classList.add('is-invalid');
                        isValid = false;
                    } else if (age > 120) {
                        errors.push('Please enter a valid date of birth');
                        dob.classList.add('is-invalid');
                        isValid = false;
                    } else {
                        dob.classList.remove('is-invalid');
                        dob.classList.add('is-valid');
                    }
                }

          
                if (!isValid && errors.length > 0) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Validation Error',
                        html: errors.map(err => `â€¢ ${err}`).join('<br>'),
                        confirmButtonColor: '#dc3545'
                    });
                }

                return isValid;
            }

            function saveProfile() {

                const submitBtn = document.querySelector('button[type="submit"]');
                const originalText = submitBtn.innerHTML;

                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Saving...';


                setTimeout(() => {
                    showAlert('Profile updated successfully!', 'success');

        
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalText;

                    
                }, 1500);
            }

           
            async function resetForm() {
              
                const result = await Swal.fire({
                    title: 'Reset changes?',
                    text: 'Are you sure you want to reset all changes? This cannot be undone.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, reset',
                    cancelButtonText: 'No, keep changes',
                    reverseButtons: true,
                    focusCancel: true
                });

                
                if (!result.isConfirmed) return;

                
                const form = document.getElementById('editProfileForm');
                if (form) {
                    form.reset();
                }

             
                document.querySelectorAll('.is-valid, .is-invalid').forEach(field => {
                    field.classList.remove('is-valid', 'is-invalid');
                });

              
                showAlert('Form has been reset', 'info');

            
            }


            async function goBackToProfile() {
                const result = await Swal.fire({
                    title: 'Go back to Profile?',
                    text: 'Any unsaved changes will be lost.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, go back',
                    cancelButtonText: 'Stay here',
                    focusCancel: true
                });

                if (result.isConfirmed) {
                    window.history.back();
                }
            }

         
            function handleImageUpload(event) {
                const file = event.target.files[0];
                if (file) {
                  
                    if (file.size > 5 * 1024 * 1024) {
                        showAlert('File size should not exceed 5MB', 'danger');
                        return;
                    }

                   
                    if (!file.type.startsWith('image/')) {
                        showAlert('Please select a valid image file', 'danger');
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const img = document.getElementById('profileImage');
                        img.src = e.target.result;
                        img.style.animation = 'fadeIn 0.5s ease-in';
                        showAlert('Profile picture updated!', 'success');
                    };
                    reader.readAsDataURL(file);

                    const formData = new FormData();
                    formData.append('image', file);

                    fetch('/uploadImage', {
                        method: 'POST',
                        body: formData
                    })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) {
                                showAlert('Image Uploaded Successfully', 'success');
                            } else {
                                showAlert(data.message || 'upload Failed', 'danger');
                            }
                        })
                        .catch(err => {
                            console.log(err);
                            showAlert('Uploading Failed', 'danger');
                        })
                }
            }

            function showAlert(message, type) {
                const iconMap = {
                    'success': 'success',
                    'danger': 'error',
                    'warning': 'warning',
                    'info': 'info'
                };

                Swal.fire({
                    icon: iconMap[type] || 'info',
                    title: type === 'success' ? 'Success!' : type === 'danger' ? 'Error!' : 'Notice',
                    text: message,
                    timer: 3000,
                    showConfirmButton: false,
                    toast: true,
                    position: 'top-end'
                });
            }

            function getAlertIcon(type) {
                switch (type) {
                    case 'success': return 'check-circle';
                    case 'danger': return 'exclamation-triangle';
                    case 'warning': return 'exclamation-circle';
                    case 'info': return 'info-circle';
                    default: return 'info-circle';
                }
            }

  
            document.addEventListener('DOMContentLoaded', function () {
           
                const phoneInput = document.getElementById('phone');
                phoneInput.addEventListener('input', function () {
              
                    let value = this.value.replace(/\D/g, '');
                 
                    this.value = value.substring(0, 10);
                    
               
                    if (value.length === 10 && /^[6-9]\d{9}$/.test(value)) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    } else if (value.length > 0) {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                    }
                });

             
                const emailInput = document.getElementById('email');
                emailInput.addEventListener('blur', function () {
                    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    const value = this.value.trim();
                    if (value && !emailRegex.test(value)) {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                    } else if (value) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });

              
                const nameInput = document.getElementById('firstName');
                nameInput.addEventListener('input', function () {
                  
                    this.value = this.value.replace(/[^a-zA-Z\s]/g, '');
                    
                  
                    const value = this.value.trim();
                    if (value.length >= 3 && value.length <= 50) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    } else if (value.length > 0) {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                    }
                });

        
                const dobInput = document.getElementById('dateOfBirth');
                dobInput.addEventListener('change', function () {
                    if (this.value) {
                        const dobDate = new Date(this.value);
                        const today = new Date();
                        const age = today.getFullYear() - dobDate.getFullYear();
                        
                        if (age >= 13 && age <= 120) {
                            this.classList.remove('is-invalid');
                            this.classList.add('is-valid');
                        } else {
                            this.classList.add('is-invalid');
                            this.classList.remove('is-valid');
                        }
                    }
                });

            
                const genderInput = document.getElementById('gender');
                genderInput.addEventListener('change', function () {
                    if (this.value) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });

            
                const formInputs = document.querySelectorAll('#editProfileForm input, #editProfileForm select');
                let hasChanges = false;

                formInputs.forEach(input => {
                    input.addEventListener('input', function () {
                        hasChanges = true;
                    });
                });

               
                window.addEventListener('beforeunload', function (e) {
                    if (hasChanges) {
                        e.preventDefault();
                        e.returnValue = '';
                    }
                });
            });

   
            document.addEventListener('keydown', function (e) {
            
                if (e.ctrlKey && e.key === 's') {
                    e.preventDefault();
                    if (validateForm()) {
                        saveProfile();
                    }
                }

              
                if (e.key === 'Escape') {
                    goBackToProfile();
                }
            });

         
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

      
            function showEmailVerificationModal() {
                const modal = new bootstrap.Modal(document.getElementById('emailVerificationModal'));
                modal.show();
            }

            function sendEmailOTP() {
                const email = document.getElementById('newEmailAddress').value;

                if (!validateEmail(email)) {
                    showAlert('Please enter a valid email address', 'danger');
                    return;
                }

                fetch('/send-email-verification-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            document.getElementById('emailVerificationStep1').style.display = 'none';
                            document.getElementById('emailVerificationStep2').style.display = 'block';
                            showAlert('Verification code sent to your email!', 'success');
                        } else {
                            showAlert(data.message || 'Failed to send verification code', 'danger');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showAlert('An error occurred while sending verification code', 'danger');
                    });
            }

            function verifyEmailOTP() {
                const email = document.getElementById('newEmailAddress').value;
                const otp = document.getElementById('emailOTP').value;

                if (!otp || otp.length !== 6) {
                    showAlert('Please enter a valid 6-digit code', 'danger');
                    return;
                }

                fetch('/verify-email-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email, otp })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            bootstrap.Modal.getInstance(document.getElementById('emailVerificationModal')).hide();
                            showAlert('Email verified and updated successfully!', 'success');
                         
                            document.getElementById('email').value = email;
                        
                            document.getElementById('emailVerificationStep1').style.display = 'block';
                            document.getElementById('emailVerificationStep2').style.display = 'none';
                            document.getElementById('newEmailAddress').value = '';
                            document.getElementById('emailOTP').value = '';
                        } else {
                            showAlert(data.message || 'Failed to verify email', 'danger');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showAlert('An error occurred while verifying email', 'danger');
                    });
            }

            function resendEmailOTP() {
                const email = document.getElementById('newEmailAddress').value;

                fetch('/send-email-verification-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showAlert('New verification code sent!', 'success');
                        } else {
                            showAlert(data.message || 'Failed to resend code', 'danger');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showAlert('An error occurred while resending code', 'danger');
                    });
            }

            function validateEmail(email) {
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                return emailRegex.test(email);
            }
        </script>

      
        <div class="modal fade" id="emailVerificationModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Verify Email Address</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div id="emailVerificationStep1">
                            <p>Enter your new email address to receive a verification code:</p>
                            <div class="mb-3">
                                <label class="form-label">New Email Address</label>
                                <input type="email" class="form-control" id="newEmailAddress" required>
                            </div>
                            <button type="button" class="btn btn-primary" onclick="sendEmailOTP()">Send Verification
                                Code</button>
                        </div>
                        <div id="emailVerificationStep2" style="display: none;">
                            <p>Enter the 6-digit verification code sent to your email:</p>
                            <div class="mb-3">
                                <label class="form-label">Verification Code</label>
                                <input type="text" class="form-control" id="emailOTP" maxlength="6" required>
                            </div>
                            <button type="button" class="btn btn-primary" onclick="verifyEmailOTP()">Verify
                                Email</button>
                            <button type="button" class="btn btn-outline-secondary ms-2"
                                onclick="resendEmailOTP()">Resend Code</button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>

        <%-include("../../views/parsuals/user/footer")%>