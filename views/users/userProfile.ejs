                const modal = new bootstrap.Modal(document.getElementById('emailVerificationModal'));
                modal.show();
            }

            function sendEmailOTP() {
                const email = document.getElementById('newEmailAddress').value;

                if (!validateEmail(email)) {
                    showAlert('Please enter a valid email address', 'danger');
                    return;
                }

                fetch('/send-email-verification-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            document.getElementById('emailVerificationStep1').style.display = 'none';
                            document.getElementById('emailVerificationStep2').style.display = 'block';
                            showAlert('Verification code sent to your email!', 'success');
