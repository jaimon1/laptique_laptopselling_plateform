<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile - LapTique</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/userProfile.css">
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-laptop"></i> LapTique
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown">

                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-shopping-bag me-2"></i>Orders</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Logout</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <%-include("../../views/parsuals/user/header")%>
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-3 text-center text-md-start">
                        <img src="<%= user.profileImage ? user.profileImage : 'data:image/jpeg;base64,' %>"
                            alt="Profile" class="profile-img" id="profileImage">
                    </div>
                    <div class="col-md-6 text-center text-md-start mt-3 mt-md-0">
                        <h2 class="mb-1" id="displayName">
                            <%= user.name %>
                        </h2>
                        <p class="mb-1" id="displayEmail">
                            <%= user.email %>
                        </p>
                        <p class="mb-0">Member since <%= new Date(user.createdOn).toLocaleString('default', {
                                month: 'long' , year: 'numeric' }) %>
                        </p>
                    </div>
                    <div class="col-md-3 text-center text-md-end mt-3 mt-md-0">
                        <a href="/editProfile" class="btn btn-light" onclick="toggleEditMode()">
                            <i class="fas fa-edit me-2"></i>Edit Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">

            <div class="row">
                <!-- Left Column -->
                <div class="col-lg-4">
                    <!-- Profile Details -->
                    <div class="profile-card">
                        <h5><i class="fas fa-user me-2"></i>Profile Details</h5>

                        <div id="viewMode">
                            <div class="mb-3">
                                <label class="form-label text-muted">Full Name</label>
                                <p class="mb-0" id="viewName">
                                    <%= user.name %>
                                </p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted">Email</label>
                                <p class="mb-0" id="viewEmail">
                                    <%= user.email %>
                                </p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted">Phone</label>
                                <p class="mb-0" id="viewPhone">+91 <%= user.phone %>
                                </p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted">Date of Birth</label>
                                <p class="mb-0" id="viewDob">
                                    <%= user.dateOfBirth ? user.dateOfBirth.toISOString().split('T')[0] : '' %>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Wallet Quick Access -->
                    <div class="profile-card" style="background: linear-gradient(135deg, #4f46e5, #7c3aed); color: white;">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1"><i class="fas fa-wallet me-2"></i>My Wallet</h5>
                                <p class="mb-0 opacity-75">Manage your wallet balance</p>
                            </div>
                            <a href="/wallet" class="btn btn-light">
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>

                    <!-- Referral Program -->
                    <div class="profile-card" style="background: linear-gradient(135deg, #10b981, #059669); color: white;">
                        <h5 class="mb-3"><i class="fas fa-gift me-2"></i>Refer & Earn</h5>
                        <p class="mb-3 opacity-90">Invite friends and earn ₹100 wallet cash when they make their first purchase!</p>
                        
                        <div class="mb-3">
                            <label class="form-label opacity-75 small">Your Referral Code</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="referralCodeDisplay" readonly style="background: rgba(255,255,255,0.2); border: none; color: white; font-weight: bold; font-size: 1.1rem;">
                                <button class="btn btn-light" onclick="copyReferralCode()" title="Copy Code">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label opacity-75 small">Share Referral Link</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="referralLinkDisplay" readonly style="background: rgba(255,255,255,0.2); border: none; color: white; font-size: 0.85rem;">
                                <button class="btn btn-light" onclick="copyReferralLink()" title="Copy Link">
                                    <i class="fas fa-link"></i>
                                </button>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-0" id="totalReferralsCount">0</h3>
                                <small class="opacity-75">Total Referrals</small>
                            </div>
                            <a href="/referral-history" class="btn btn-light">
                                <i class="fas fa-history me-2"></i>View History
                            </a>
                        </div>
                    </div>

                    <!-- Address Management -->
                    <div class="profile-card">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5><i class="fas fa-map-marker-alt me-2"></i>Shipping Addresses</h5>
                            <button class="btn btn-outline-primary btn-sm" onclick="showAddAddressModal()">
                                <i class="fas fa-plus me-2"></i>Add Address
                            </button>
                        </div>

                        <div id="addressesList">
                            <% if (addresses && addresses.length> 0) { %>
                                <% addresses.forEach((address, index)=> { %>
                                    <div class="address-item mb-3 p-3 border rounded"
                                        data-address-id="<%= address._id %>">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <p class="mb-1"><strong>
                                                        <%= address.addressType %>
                                                    </strong></p>
                                                <p class="mb-1">
                                                    <%= address.name %>
                                                </p>
                                                <p class="mb-1">
                                                    <%= address.landmark %>, <%= address.city %>
                                                </p>
                                                <p class="mb-1">
                                                    <%= address.state %>
                                                </p>
                                                <p class="mb-1">Phone: <%= address.phone %>
                                                </p>
                                                <% if (address.altPhone && address.altPhone !==address.phone) { %>
                                                    <p class="mb-1">Alt Phone: <%= address.altPhone %>
                                                    </p>
                                                    <% } %>
                                            </div>
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle"
                                                    type="button" data-bs-toggle="dropdown">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" href="#"
                                                            onclick="editAddressModal('<%= address._id %>')">
                                                            <i class="fas fa-edit me-2"></i>Edit
                                                        </a></li>
                                                    <li><a class="dropdown-item text-danger" href="#"
                                                            onclick="deleteAddress('<%= address._id %>')">
                                                            <i class="fas fa-trash me-2"></i>Delete
                                                        </a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } else { %>
                                            <div class="text-center py-4">
                                                <i class="fas fa-map-marker-alt fa-3x text-muted mb-3"></i>
                                                <p class="text-muted">No addresses added yet</p>
                                                <button class="btn btn-primary" onclick="showAddAddressModal()">
                                                    <i class="fas fa-plus me-2"></i>Add Your First Address
                                                </button>
                                            </div>
                                        <% } %>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="profile-card">
                        <h5><i class="fas fa-cog me-2"></i>Account Settings</h5>
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary" onclick="changePassword()">
                                <i class="fas fa-key me-2"></i>Change Password
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-lg-8">
                    <!-- Recent Orders -->
                    <div class="profile-card">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5><i class="fas fa-shopping-bag me-2"></i>Recent Orders</h5>
                            <a href="/orders" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-2"></i>View All
                            </a>
                        </div>

                        <% if (orders && orders.length> 0) { %>
                            <% orders.forEach(order=> { %>
                                <% if (order.orderItems && order.orderItems.length > 0 && order.orderItems[0].product) { %>
                                <div class="order-item">
                                    <div class="row align-items-center">
                                        <div class="col-md-2 col-3">
                                            <% if (order.orderItems[0].product.ProductImages && order.orderItems[0].product.ProductImages.length > 0) { %>
                                                <img src="/uploads/re-images/<%= order.orderItems[0].product.ProductImages[0] %>"
                                                    alt="<%= order.orderItems[0].product.productName %>"
                                                    class="product-img"
                                                    onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22100%22 height=%22100%22%3E%3Crect fill=%22%23f0f0f0%22 width=%22100%22 height=%22100%22/%3E%3Ctext fill=%22%23999%22 x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22%3ENo Image%3C/text%3E%3C/svg%3E'">
                                            <% } else { %>
                                                <img src="data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22100%22 height=%22100%22%3E%3Crect fill=%22%23f0f0f0%22 width=%22100%22 height=%22100%22/%3E%3Ctext fill=%22%23999%22 x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22%3ENo Image%3C/text%3E%3C/svg%3E"
                                                    alt="No Image"
                                                    class="product-img">
                                            <% } %>
                                        </div>
                                        <div class="col-md-6 col-9">
                                            <h6 class="mb-1">
                                                <%= order.orderItems[0].product.productName || 'Product Unavailable' %>
                                            </h6>
                                            <p class="text-muted mb-1">
                                                Order #<%= order.orderId %>
                                                <!-- Return Rejected Badge -->
                                                <% if (order.returnStatus === 'Rejected') { %>
                                                    <span class="badge bg-danger ms-2" style="font-size: 0.7rem;">
                                                        <i class="fas fa-times-circle me-1"></i>Return Rejected
                                                    </span>
                                                <% } %>
                                            </p>
                                            <small class="text-muted">Ordered on
                                                <%= new Date(order.createdOn).toLocaleDateString('en-IN', {
                                                    year: 'numeric' , month: 'short' , day: 'numeric' }) %>
                                            </small>
                                        </div>
                                        <div class="col-md-2 col-6 mt-2 mt-md-0">
                                            <span
                                                class="status-badge <%= order.status === 'Delivered' ? 'status-delivered' : (['Pending','Processing','Shipped','Out for Delivery'].includes(order.status) ? 'status-pending' : 'status-cancelled') %>">
                                                <%= order.status %>
                                            </span>
                                        </div>
                                        <div class="col-md-2 col-6 mt-2 mt-md-0 text-end">
                                            <p class="mb-2 fw-bold">₹<%= parseInt(order.finalAmount).toLocaleString() %>
                                            </p>
                                            <div class="d-grid gap-2">
                                                <a href="/order/<%= order._id %>"
                                                    class="btn btn-sm btn-outline-primary">
                                                    Details
                                                </a>
                                                <% if (['Pending','Processing'].includes(order.status)) { %>
                                                    <button class="btn btn-sm btn-outline-danger"
                                                        onclick="cancelOrder('<%= order._id %>')">
                                                        Cancel
                                                    </button>
                                                    <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                <% }) %>
                                    <% } else { %>
                                        <div class="text-center py-4">
                                            <i class="fas fa-shopping-bag fa-3x text-muted mb-3"></i>
                                            <p class="text-muted">No recent orders</p>
                                            <a href="/shop" class="btn btn-primary btn-sm"><i
                                                    class="fas fa-shopping-bag me-2"></i>Start Shopping</a>
                                        </div>
                                        <% } %>
                    </div>

                    <!-- Order History -->
                    <div class="profile-card">
                        <h5><i class="fas fa-history me-2"></i>Order History</h5>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (orders && orders.length> 0) { %>
                                        <% orders.forEach(order=> { %>
                                            <tr>
                                                <td>
                                                    #<%= order.orderId %>
                                                    <!-- Return Rejected Badge -->
                                                    <% if (order.returnStatus === 'Rejected') { %>
                                                        <br>
                                                        <span class="badge bg-danger mt-1" style="font-size: 0.7rem;">
                                                            <i class="fas fa-times-circle me-1"></i>Return Rejected
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <%= new Date(order.createdOn).toLocaleDateString('en-IN', {
                                                        year: 'numeric' , month: 'short' , day: 'numeric' }) %>
                                                </td>
                                                <td>
                                                    <%= order.orderItems.reduce((total, item)=> total + item.quantity,
                                                        0) %> items
                                                </td>
                                                <td>₹<%= parseInt(order.finalAmount).toLocaleString() %>
                                                </td>
                                                <td>
                                                    <span
                                                        class="status-badge <%= order.status === 'Delivered' ? 'status-delivered' : (['Pending','Processing','Shipped','Out for Delivery'].includes(order.status) ? 'status-pending' : 'status-cancelled') %>">
                                                        <%= order.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <a class="btn btn-sm btn-outline-primary"
                                                        href="/order/<%= order._id %>">View</a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="6" class="text-center text-muted">No recent orders
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modals -->
        <!-- Change Password Modal -->
        <div class="modal fade" id="changePasswordModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><i class="fas fa-key me-2"></i>Change Password</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form id="passwordForm" novalidate>
                            <div class="mb-3">
                                <label class="form-label">Current Password <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="currentPassword" required minlength="6">
                                    <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('currentPassword', this)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback">Please enter your current password</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">New Password <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="newPassword" required 
                                           minlength="8" maxlength="50">
                                    <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('newPassword', this)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <small class="text-muted">
                                    Password must be 8-50 characters with at least one uppercase, lowercase, number, and special character
                                </small>
                                <div class="invalid-feedback" id="newPasswordFeedback">Please enter a valid password</div>
                                <!-- Password strength indicator -->
                                <div class="mt-2" id="passwordStrength" style="display: none;">
                                    <div class="progress" style="height: 5px;">
                                        <div class="progress-bar" id="strengthBar" role="progressbar" style="width: 0%"></div>
                                    </div>
                                    <small id="strengthText" class="text-muted"></small>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Confirm New Password <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="confirmPassword" required 
                                           minlength="8" maxlength="50">
                                    <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('confirmPassword', this)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback">Passwords must match</div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" onclick="updatePassword()">
                            <i class="fas fa-save me-2"></i>Update Password
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cancel Order Modal -->
        <div class="modal fade" id="cancelOrderModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Cancel Order</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to cancel order <strong id="cancelOrderId"></strong>?</p>
                        <div class="mb-3">
                            <label class="form-label">Reason for cancellation:</label>
                            <select class="form-control" id="cancelReason">
                                <option value="">Select a reason</option>
                                <option value="changed_mind">Changed my mind</option>
                                <option value="found_better_price">Found better price elsewhere</option>
                                <option value="delivery_delay">Delivery taking too long</option>
                                <option value="ordered_by_mistake">Ordered by mistake</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Order</button>
                        <button type="button" class="btn btn-danger" onclick="confirmCancelOrder()">Cancel
                            Order</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Address Modal -->
        <div class="modal fade" id="addAddressModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add New Address</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form id="addAddressForm" novalidate>
                            <div class="mb-3">
                                <label class="form-label">Address Type <span class="text-danger">*</span></label>
                                <select class="form-control" id="addAddressType" required>
                                    <option value="">Select Type</option>
                                    <option value="Home">Home</option>
                                    <option value="Work">Work</option>
                                    <option value="Other">Other</option>
                                </select>
                                <div class="invalid-feedback">Please select an address type</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Full Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="addName" required 
                                       minlength="3" maxlength="50" pattern="^[a-zA-Z\s]+$">
                                <div class="invalid-feedback">Name must be 3-50 characters and contain only letters</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Landmark/House No./Building <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="addLandmark" required 
                                       minlength="3" maxlength="100">
                                <div class="invalid-feedback">Landmark must be 3-100 characters</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">City <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="addCity" required 
                                       minlength="2" maxlength="50" pattern="^[a-zA-Z\s]+$">
                                <div class="invalid-feedback">City must be 2-50 characters and contain only letters</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">State <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="addState" required 
                                       minlength="2" maxlength="50" pattern="^[a-zA-Z\s]+$">
                                <div class="invalid-feedback">State must be 2-50 characters and contain only letters</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Phone Number <span class="text-danger">*</span></label>
                                <input type="tel" class="form-control" id="addPhone" required 
                                       pattern="^[6-9]\d{9}$" maxlength="10">
                                <small class="text-muted">Enter 10-digit Indian mobile number</small>
                                <div class="invalid-feedback">Please enter a valid 10-digit Indian mobile number</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Alternative Phone (Optional)</label>
                                <input type="tel" class="form-control" id="addAltPhone" 
                                       pattern="^[6-9]\d{9}$" maxlength="10">
                                <small class="text-muted">Enter 10-digit Indian mobile number</small>
                                <div class="invalid-feedback">Please enter a valid 10-digit Indian mobile number</div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" onclick="saveNewAddress()">Add Address</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Address Modal -->
        <div class="modal fade" id="editAddressModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
