                    errors.push('Landmark must be between 3 and 100 characters');
                }

                // City validation
                if (!city) {
                    errors.push('City is required');
                } else if (city.length < 2 || city.length > 50) {
                    errors.push('City must be between 2 and 50 characters');
                } else if (!/^[a-zA-Z\s]+$/.test(city)) {
                    errors.push('City must contain only letters and spaces');
                }

                // State validation
                if (!state) {
                    errors.push('State is required');
                } else if (state.length < 2 || state.length > 50) {
                    errors.push('State must be between 2 and 50 characters');
                } else if (!/^[a-zA-Z\s]+$/.test(state)) {
                    errors.push('State must contain only letters and spaces');
                }

                // Phone validation
                if (!phone) {
                    errors.push('Phone number is required');
                } else if (!/^[6-9]\d{9}$/.test(phone)) {
                    errors.push('Please enter a valid 10-digit Indian mobile number starting with 6-9');
                }

                // Alternative phone validation (optional)
                if (altPhone && !/^[6-9]\d{9}$/.test(altPhone)) {
                    errors.push('Alternative phone must be a valid 10-digit Indian mobile number starting with 6-9');
                }

                // Check if phone and altPhone are the same
                if (altPhone && phone === altPhone) {
                    errors.push('Alternative phone number must be different from primary phone number');
                }

                // Show errors if any
                if (errors.length > 0) {
                    form.classList.add('was-validated');
                    Swal.fire({
                        icon: 'error',
                        title: 'Validation Error',
                        html: errors.map(err => `• ${err}`).join('<br>'),
                        confirmButtonColor: '#dc3545'
                    });
                    return;
                }

                // Show loading
                Swal.fire({
                    title: 'Updating Address...',
                    text: 'Please wait',
                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                fetch(`/addresses/${addressId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        addressType,
                        name,
                        landmark,
                        city,
                        state,
                        phone,
                        altPhone: altPhone || phone
                    })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            bootstrap.Modal.getInstance(document.getElementById('editAddressModal')).hide();
                            Swal.fire({
                                icon: 'success',
                                title: 'Success!',
                                text: 'Address updated successfully',
                                timer: 2000,
                                showConfirmButton: false
                            });
                            // Reload page to show updated address
                            setTimeout(() => location.reload(), 2000);
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: data.message || 'Failed to update address',
                                confirmButtonColor: '#dc3545'
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: 'An error occurred while updating address',
                            confirmButtonColor: '#dc3545'
                        });
                    });
            }

            // drop-in SweetAlert2 version (works with your inline onclick)
            async function deleteAddress(addressId) {
                // 1) confirm with SweetAlert2
                console.log("this is alert")
                const result = await Swal.fire({
                    title: 'Delete this address?',
                    text: "This action cannot be undone.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it',
                    cancelButtonText: 'Cancel',
                    focusCancel: true
                });

                if (!result.isConfirmed) return; // user cancelled

                // 2) show loading overlay
                Swal.fire({
                    title: 'Deleting...',
                    allowOutsideClick: false,
                    didOpen: () => Swal.showLoading()
                });

                try {
                    const res = await fetch(`/addresses/${addressId}`, {
                        method: 'DELETE',
                        headers: { 'Accept': 'application/json' }
                    });

                    // optional: check http status
                    if (!res.ok) {
                        const text = await res.text();
                        throw new Error(text || `Network error: ${res.status}`);
                    }

                    const data = await res.json();
                    Swal.close(); // close loading

                    if (data.success) {
                        // success toast
                        await Swal.fire('Deleted!', 'Address deleted successfully.', 'success');

                        // remove DOM node (make sure wrapper has data-address-id)
                        const addressElement = document.querySelector(`[data-address-id="${addressId}"]`);
                        if (addressElement) addressElement.remove();
                    } else {
                        Swal.fire('Error', data.message || 'Failed to delete address', 'error');
                    }
                } catch (error) {
                    console.error('Error deleting address:', error);
                    Swal.close();
                    Swal.fire('Error', 'An error occurred while deleting address', 'error');
                }
            }


