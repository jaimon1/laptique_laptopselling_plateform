            function copyReferralCode() {
                const codeInput = document.getElementById('referralCodeDisplay');
                codeInput.select();
                codeInput.setSelectionRange(0, 99999); // For mobile devices
                
                navigator.clipboard.writeText(codeInput.value).then(() => {
                    showAlert('Referral code copied to clipboard!', 'success');
                }).catch(err => {
                    // Fallback for older browsers
                    document.execCommand('copy');
                    showAlert('Referral code copied to clipboard!', 'success');
                });
            }

            function copyReferralLink() {
                const linkInput = document.getElementById('referralLinkDisplay');
                linkInput.select();
                linkInput.setSelectionRange(0, 99999); // For mobile devices
                
                navigator.clipboard.writeText(linkInput.value).then(() => {
                    showAlert('Referral link copied to clipboard!', 'success');
                }).catch(err => {
                    // Fallback for older browsers
                    document.execCommand('copy');
                    showAlert('Referral link copied to clipboard!', 'success');
                });
            }

            // Load referral data on page load
            document.addEventListener('DOMContentLoaded', function() {
                loadReferralData();
            });
