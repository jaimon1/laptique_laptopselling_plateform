<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verify OTP - Forgot Password</title>
    <link rel="stylesheet" href="/css/forgotPasswordOtp.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <div class="page-container">
        <div class="logo">LAPTIQUE</div>
        
        <div class="left-section">
            <div class="left-content">
                <h2>Verify Your Identity</h2>
                <p>We've sent a secure code to your email. Enter it below to continue.</p>
            </div>
        </div>

        <div class="right-section">
            <div class="form-card">
            <h1>Enter the OTP</h1>
            <p class="subtitle">We've sent a 6-digit OTP to your email</p>
            
            <div id="alertContainer"></div>

            <form id="otpForm">
                <div class="form-group">
                    <label for="otp">OTP</label>
                    <input type="text" name="otp" class="form-control otp-input" id="otp" placeholder="000000" maxlength="6" required>
                    <div id="errorOtp" class="error-message"></div>
                </div>
                <button type="submit" class="btn-primary" id="verifyBtn">Verify OTP</button>
            </form>

            <div class="resend-section">
                <span class="timer" id="timer">Resend OTP in <span id="countdown">60</span>s</span>
                <a href="#" class="resend-link hidden" id="resendLink">Resend OTP</a>
            </div>

            <div class="back-link">
                <a href="/forgot-password">Back to Email</a>
            </div>
            </div>
        </div>
    </div>

    <script>
        const otpInput = document.getElementById('otp');
        const errorOtp = document.getElementById('errorOtp');
        const otpForm = document.getElementById('otpForm');
        const verifyBtn = document.getElementById('verifyBtn');
        const alertContainer = document.getElementById('alertContainer');
        const timer = document.getElementById('timer');
        const countdown = document.getElementById('countdown');
        const resendLink = document.getElementById('resendLink');

        let timeLeft = 60;
        let timerInterval;

        function startTimer() {
            timerInterval = setInterval(() => {
                timeLeft--;
                countdown.textContent = timeLeft;
                
                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    timer.classList.add('d-none');
                    resendLink.classList.remove('d-none');
                }
            }, 1000);
        }

        function showAlert(message, type) {
            alertContainer.innerHTML = `
                <div class="alert alert-${type} text-center">
                    ${message}
                </div>
            `;
        }

        function otpValidation() {
            const otp = otpInput.value.trim();
            if (otp.length !== 6 || !/^\d{6}$/.test(otp)) {
                errorOtp.style.display = "block";
                errorOtp.innerHTML = "Please enter a valid 6-digit OTP";
                return false;
            } else {
                errorOtp.style.display = "none";
                errorOtp.innerHTML = "";
                return true;
            }
        }

        document.addEventListener("DOMContentLoaded", function () {
            startTimer();

            otpForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                if (!otpValidation()) {
                    return;
                }

                verifyBtn.innerHTML = 'Verifying...';
                verifyBtn.disabled = true;

                try {
                    const response = await fetch('/verify-forgot-password-otp', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            otp: otpInput.value.trim()
                        })
                    });

                    const data = await response.json();

                    if (data.success) {
                        showAlert(data.message, 'success');
                        setTimeout(() => {
                            window.location.href = data.redirectUrl;
                        }, 1000);
                    } else {
                        showAlert(data.msg, 'danger');
                        verifyBtn.innerHTML = 'Verify OTP';
                        verifyBtn.disabled = false;
                    }
                } catch (error) {
                    showAlert('An error occurred. Please try again.', 'danger');
                    verifyBtn.innerHTML = 'Verify OTP';
                    verifyBtn.disabled = false;
                }
            });

            resendLink.addEventListener('click', async (e) => {
                e.preventDefault();
                
                resendLink.innerHTML = 'Sending...';
                
                try {
                    const response = await fetch('/resend-forgot-password-otp', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    });

                    const data = await response.json();

                    if (data.success) {
                        showAlert(data.msg, 'success');
                        timeLeft = 60;
                        countdown.textContent = timeLeft;
                        timer.classList.remove('d-none');
                        resendLink.classList.add('d-none');
                        resendLink.innerHTML = 'Resend OTP';
                        startTimer();
                    } else {
                        showAlert(data.msg, 'danger');
                        resendLink.innerHTML = 'Resend OTP';
                    }
                } catch (error) {
                    showAlert('Failed to resend OTP. Please try again.', 'danger');
                    resendLink.innerHTML = 'Resend OTP';
                }
            });

            otpInput.addEventListener('input', () => {
                // Only allow numbers
                otpInput.value = otpInput.value.replace(/[^0-9]/g, '');
                if (errorOtp.innerHTML) {
                    otpValidation();
                }
            });

            otpInput.addEventListener('blur', otpValidation);
        });
    </script>
</body>

</html>